{
    "name": "zafskitchen/catering-system",
    "description": "Zaf's Kitchen Catering Management System",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "resend/resend-php": "^0.10.0",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "sendmail.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false,
        "process-timeout": 600
    },
    "scripts": {
        "post-autoload-dump": [
            "composer dump-autoload -o"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}