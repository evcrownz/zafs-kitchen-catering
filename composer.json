{
    "name": "zafskitchen/catering-system",
    "description": "Zaf's Kitchen Catering Management System",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "resend/resend-php": "^0.10.0",
        "google/apiclient": "^2.15",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}